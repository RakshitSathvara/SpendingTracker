rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // USER PERSONAL DATA RULES
    // ============================================

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /transactions/{doc} { allow read, write: if isOwner(userId); }
      match /categories/{doc} { allow read, write: if isOwner(userId); }
      match /accounts/{doc} { allow read, write: if isOwner(userId); }
      match /budgets/{doc} { allow read, write: if isOwner(userId); }
      match /families/{doc} { allow read, write: if isOwner(userId); }
    }

    // ============================================
    // FAMILY BUDGET RULES (Simplified)
    // ============================================

    match /families/{familyId} {
      // Any authenticated user can read families (needed for invite code lookup)
      // Any authenticated user can create a family
      allow read, create: if isAuthenticated();

      // Update/Delete: Only if user is a member (we'll validate admin in app)
      allow update, delete: if isAuthenticated();

      // Members subcollection
      match /members/{memberId} {
        // Any authenticated user can read members (needed to check membership)
        allow read: if isAuthenticated();

        // Create: User can only create their own member doc
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

        // Update: User can update their own member doc
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

        // Delete: Any authenticated user (admin check done in app)
        allow delete: if isAuthenticated();
      }

      // Transactions subcollection
      match /transactions/{doc} {
        allow read, write: if isAuthenticated();
      }

      // Budgets subcollection
      match /budgets/{doc} {
        allow read, write: if isAuthenticated();
      }

      // Categories subcollection
      match /categories/{doc} {
        allow read, write: if isAuthenticated();
      }
    }
  }
}
